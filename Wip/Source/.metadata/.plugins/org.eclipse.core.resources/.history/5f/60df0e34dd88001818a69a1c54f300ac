/**
 * @brief One line documentation
 *
 * A more detailed documentation
 *
 * @param arg1 the first function argument
 * @param arg2 the second function argument
 *
 * @return descrition for the function return value
 */
void Display_showNumberInDigit(uint8_t number,uint8_t digit)
{
	for(int i = 0; i<5; i++)
	{
		R_GPIO_PinWrite(LED7_DIGITS[i],GPIO_LEVEL_HIGH);
	}
	R_GPIO_PinWrite(LED7_DIGITS[digit],GPIO_LEVEL_LOW);
	for(int i = 0; i<7;i++)
	{
//		R_GPIO_PinWrite(LED7_PIN[i],(LED7_CODE[i] & (1<<i)));
		R_GPIO_PinWrite(LED7_PIN[i],GPIO_LEVEL_LOW);

	}
}

